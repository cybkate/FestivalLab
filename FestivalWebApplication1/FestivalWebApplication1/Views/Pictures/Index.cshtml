@model IEnumerable<FestivalWebApplication1.Models.Picture>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPictures)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PicturePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FandomId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPictures)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PicturePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FandomId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PictureId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PictureId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PictureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
